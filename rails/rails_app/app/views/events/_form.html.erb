<%= form_for(@event) do |f| %>
	<%if @event.errors.any? %>
		<div class="panel">
			<ul>
				<% @event.errors.full_messages.each do |message| %>
					<li> <%= message %> </li>
				<% end %>
			</ul>	
		</div>

		

	<%	end %>
	
	<div class="row">
		<div class="medium-2 columns">
			<%=f.label :Beschreibung %>
		</div>
		<div class="medium-10 columns">
			<%=f.text_area :description, :size => "15x2" %>
		</div>

	</div>

	<div class="row">
		<div class="medium-2 columns">
			<%=f.label :Name %>
		</div>
		
		<div class="medium-10 columns">
			<%=f.text_field :name %>
		</div>

	</div>

	<div class="row">
		<div class="medium-2 columns">
			<%=f.label :Ort %>
		</div>

		<div class="medium-10 columns">
			<%=f.text_field :location %>
		</div>
	</div>
	

	<div class="row">
		<div class="medium-2 columns">
			<%=f.label :Preis %>
		</div>
		<div class="medium-10 columns">
			<%=f.number_field :price %>
		</div>
	</div>
	

	<div class="row">
		<div class="medium-2 columns">
			<%=f.label :Uhrzeit %>
		</div>
		<div class="medium-10 columns">
			<%=f.datetime_select :start_at %>		
		</div>
	</div>

	<div class="row">
		<div class="medium-2 columns">
			<%=f.label :Bilddatei %>
		</div>
		<div class="medium-10 columns">
			<%=f.text_field :image_file, placeholder: "gif,jpg,png Dateiname" %>
		</div>

	</div>

